<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PNB Bank | Success</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .modal-header {
      background-color: #b6020c;
      color: white;
    }
    .modal-content {
      border-radius: 10px;
    }
    .modal-body {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .logo-section {
      flex: 1;
      text-align: center;
      border-right: 1px solid #dee2e6;
      padding: 20px;
    }
    .text-section {
      flex: 2;
      padding: 20px;
      text-align: center;
    }
    .spinner-border {
      margin-top: 1rem;
    }
  </style>
</head>
<body>

  <!-- Modal -->
  <div class="modal fade" id="pnbModal" tabindex="-1" aria-labelledby="pnbModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="pnbModalLabel">Punjab National Bank</h5>
        </div>

        <div class="modal-body">
          <!-- Left side: Logo -->
          <div class="logo-section">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTVRNqZPXTg8Ro-IShgqAp71IAb37aaYV8cfw&s" alt="PNB Logo" width="100%">
          </div>

          <!-- Right side: Text content -->
          <div class="text-section">
            <h4 class="mb-3">Important Information !</h4> 
            <p class="mb-2">We have moved ! Our Corporate website is now <h6>https://pnb.bank.in</h6> You will be redirected to new domain </p>
            <!-- <p class="mb-2">You will be automatically redirected to new domain shortly.</p> -->
            <div class="spinner-border text-danger" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const modalShown = sessionStorage.getItem("pnbModalShown");

    if (!modalShown) {
      // Show modal
      const pnbModal = new bootstrap.Modal(document.getElementById('pnbModal'), {
        backdrop: 'static',
        keyboard: false
      });
      pnbModal.show();

      // Mark modal as shown
      sessionStorage.setItem("pnbModalShown", "true");

      // Redirect after 5 seconds
      setTimeout(function () {
        window.location.href = "https://pnb.bank.in"; // Change to your URL
      }, 9000);
    } else {
      // If back button is used, redirect again or handle differently
      window.location.href = "https://pnb.bank.in";
    }
  </script>

</body>
</html>
